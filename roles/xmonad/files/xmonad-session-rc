#!/usr/bin/env bash

# Start xscreensaver
sleep 10 && xscreensaver -no-splash &



###########
# ICON TRAY

setup_tray() {

    # Setup the tray
    stalonetray &

    # Wait the tray to be ready
    sleep 3

    # Start nm-applet if it exists
    ( type nm-applet > /dev/null && nm-applet --sm-disable ) &
}

sleep 5 && setup_tray
